<%- include("partials/header.ejs") %>

  <!-- Title Box Header -->
  <div class="box" id="heading">
    <h1> Work List </h1>
  </div>

  <!-- Tasks Box -->
  <div class="box" id="taskBox">

    <% work.forEach(function(tasks){ %>
      <form action ="/deleteWork" method = "post">
        <div class="item">
          <input type="checkbox" name="checkbox" value="<%=tasks._id%>" onChange="this.form.submit()">
          <p> <%= tasks.task %> </p>
        </div>
      </form>
    <% }); %>

        <!-- Submit button -->
        <form class="item" action="/submitWorkTask" method="post">
          <input type="text" name="workTask" placeholder="Add a work task" required>
          <button type="submit">+</button>
        </form>
  </div>


  <%- include("partials/footer.ejs") %>